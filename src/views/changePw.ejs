            <div
                class="message is-info box"
                id="dad-warning"
                style="padding: 0"
            >
                <div class="message-header">
                    <p>Cambia password</p>
                </div>
                <div class="message-body">
                    <div
                        class="notification is-danger"
                        id="pw-error"
                        style="display: none"
                    ></div>
                    <div
                        class="notification is-success"
                        id="pw-success"
                        style="display: none"
                    >
                        Password cambiata con successo!<br />Stai venendo
                        redirezionato...
                    </div>

                    <form action="/cambia-password" method="post" id="pw-form">
                        <div class="field">
                            <label class="label" for="old-password"
                                >Password attuale</label
                            >
                            <div class="control">
                                <input
                                    class="input"
                                    type="password"
                                    placeholder="La tua vecchia password"
                                    id="old-password"
                                />
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="new-password"
                                >Nuova password</label
                            >
                            <div class="control">
                                <input
                                    class="input"
                                    type="password"
                                    placeholder="La nuova password da impostare"
                                    id="new-password"
                                />
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-info">
                                    Cambia password
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
